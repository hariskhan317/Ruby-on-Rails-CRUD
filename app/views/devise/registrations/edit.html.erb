<h2 class="text-3xl font-medium">Edit <%= resource_name.to_s.humanize %></h2>

<div class="mx-auto bg-gray-100 w-1/2 px-8 py-6 rounded">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'px-3 w-full h-8 border rounded mt-1'  %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field mt-5">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class:'px-3 w-full h-8 border rounded mt-1'   %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field mt-6">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'px-3 w-full h-8 border rounded mt-1'   %>
  </div>

  <div class="field mt-6">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class:'px-3 w-full h-8 border rounded mt-1'   %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class:"bg-gray-800 rounded h-10 w-60 text-white my-10" %>
  </div>
<% end %>



<div>Unhappy? 
  <%= button_to "Delete my account", registration_path(resource_name), 
    class: 'text-red-700', 
    data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, 
    method: :delete %>
</div>

<%= link_to "Back", :back %>

</div>
