<div class="bg-gray-100 mx-auto w-1/3 p-6 rounded-md mt-10">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <h2 class="pb-5 text-3xl font-medium capitalize text-center">Sign up</h2>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'px-3 w-full h-8 border rounded mt-1'  %>
  </div>

  <div class="field mt-4">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:'px-3 w-full h-8 border rounded mt-1'  %>
  </div>

  <div class="field mt-4">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'px-3 w-full h-8 border rounded mt-1'  %>
  </div>

  <div class="actions pb-3">
    <%= f.submit "Sign up", class:'bg-gray-800 w-full h-10 rounded text-white font-medium mt-6' %>
  </div>

  <%= link_to 'Sign In if you have account', new_user_session_path, class:"text-black" %>
<% end %>

 

</div>