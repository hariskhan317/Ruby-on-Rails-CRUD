<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-2">
    <%= form.label :first_name, style: "display: block" %>
    <%= form.text_field :first_name, class:'border rounded w-full h-8 mt-2' %>
  </div>

  <div class="mt-2">
    <%= form.label :last_name, style: "display: block" %>
    <%= form.text_field :last_name, class:'border rounded w-full h-8 mt-2' %>
  </div>

  <div class="mt-2">
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email, class:'border rounded w-full h-8 mt-2' %>
  </div>

  <div class="mt-2">
    <%= form.label :phone, style: "display: block" %>
    <%= form.text_field :phone, class:'border rounded w-full h-8 mt-2' %>
  </div>

  <div class="mt-2">
    <%= form.label :twitter, style: "display: block" %>
    <%= form.text_field :twitter, class:'border rounded w-full h-8' %>
  </div>

  <div class="mt-2">
   
    <%= form.number_field :user_id, 
      id: :friend_user_id, 
      class:'border rounded w-full h-8', 
      value: current_user.id, type: :hidden %>
  </div>


  <div>
    <%= form.submit class:'mt-7 border h-10 px-3 py-1.5 rounded bg-gray-800 text-white' %>
  </div>
<% end %>
